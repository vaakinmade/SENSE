<% @page_title_icon_class = "fa fa-users" %>
<% @page_title = "Patient" %>

<!-- END STYLE CUSTOMIZER -->
				<!-- BEGIN SAMPLE FORM PORTLET-->
					<div class="portlet box red" style="max-width:50%; margin-left:25%; ">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-reorder"></i> Delete Patient
							</div>
							<div class="tools">
								<i class="fa fa-warning"></i>
							</div>
						</div>
						<div class="portlet-body form">
							<%= form_for(:patient, :url => {:action => 'destroy', :id => @patient.id}, :html => {:class => 'form-horizontal', :role => 'form'}) do %>
							
								<div class="form-group">
										
											<div class="col-md-12">
												<center><h5><strong>Are you sure you want to permanently delete this patient?</strong></h5>
												<h3><%= @patient.name %></h3></center>
											</div>
									</div>
								
	 							 


								<div class="form-actions fluid">
									<div class="col-md-offset-3 col-md-9">
										<%= submit_tag("Delete", :class => 'btn red')%>
										<%= link_to("Cancel", {:action => 'index'}, :class => 'btn default') %>
									</div>
								</div>
							
							<% end %>
						</div>
					</div>
					<!-- END SAMPLE FORM PORTLET-->

					<!-- END EXAMPLE TABLE PORTLET-->

							

		</div>
	</div>
	<!-- END CONTENT -->
</div>
