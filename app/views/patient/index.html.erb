									<%= patient.gender %>
								</td>
								<td>
									<%= patient.bloodgroup %>
								</td>
								<td>
								<%= link_to({:action => 'show', :id => patient.id}, :class => 'btn default btn-xs default') do %>
								<i class=""></i> More... 
								<% end %>

								<%= link_to({:action => 'edit', :id => patient.id}, :class => 'btn default btn-xs blue') do %>
								<i class="fa fa-edit"></i> Edit 
								<% end %>
								
