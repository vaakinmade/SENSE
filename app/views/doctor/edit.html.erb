<% @page_title_icon_class = "fa fa-user-md" %>
<% @page_title = "Doctor" %>

<!-- END STYLE CUSTOMIZER -->
					<!-- BEGIN SAMPLE FORM PORTLET-->
					<div class="portlet box light-grey" style="max-width:1000px; margin:0 auto; ">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-reorder"></i> Edit Doctor
							</div>
							<div class="tools">
								<a href="" class="collapse">
								</a>
								<a href="" class="reload">
								</a>
							</div>
						</div>
						<div class="portlet-body form">
							<%= form_for(:doctor, :url => {:action => 'update', :id => @doctor.id}, :html => {:id => 'form_sample_1', :class => 'form-horizontal', :role => 'form'}) do |f| %>
							
								<div class="form-body">
									<div class="alert alert-danger display-hide">
										<button class="close" data-close="alert"></button>
										You have some form errors. Please check below.
									</div>
									<div class="alert alert-success display-hide">
										<button class="close" data-close="alert"></button>
										Your form validation is successful!
									</div>
									<div class="form-group">
										<label class="control-label col-md-3">Name
										<span class="required">
											 *
										</span>
										</label>
										<div class="col-md-9">
											<%= f.text_field(:name, :class => 'form-control', :placeholder => '', :required => :true) %>
										</div>
									</div>

									<div class="form-group">
										<label class="control-label col-md-3">Email
										<span class="required">
											 *
										</span>
										</label>
										<div class="col-md-9">
											<%= f.text_field(:email, :class => 'form-control', :placeholder => 'Enter a valid email', :type => :email, :required => :true) %>
										</div>
									</div>

									<div class="form-group">
										<label class="control-label col-md-3">Password
										<span class="required">
											 *
										</span>
										</label>
										<div class="col-md-9">
											<%= f.text_field(:password, :class => 'form-control', :value => @doctor.password_digest, :type => :password, :required => :true) %>
										</div>
									</div>

									<div class="form-group">
										<label class="control-label col-md-3">Department
										<span class="required">
											 *
										</span>
										</label>
										<div class="col-md-9">
											<%= f.collection_select(:department_id, Department.all, :id, :name, {:prompt => @doctor.department.name}, { :class => 'col-md-3 form-control', :required => :true }) %>
										</div>
									</div>

									<div class="form-group">
										<label class="control-label col-md-3">Address
										<span class="required">
											 *
										</span>
										</label>
										<div class="col-md-9">
											<%= f.text_area(:address, :class => 'wysihtml5 form-control', :rows => '4', :required => :true) %>
										</div>
									</div>

									<div class="form-group">
										<label class="control-label col-md-3">Phone
										<span class="required">
											 *
										</span>
										</label>
										<div class="col-md-9">
											<%= f.text_field(:phone, :class => 'form-control', :type => 'tel', :pattern => '^(01|07|08|09)\d{3} \d{6}$', :required => :true) %><em> e.g 01752 252525</em>
										</div>
									</div>

									<div class="form-group">
										<label class="control-label col-md-3">Gender
										<span class="required">
											 *
										</span>
										</label>
										<div class="col-md-9">
											<%= f.select :gender, options_for_select([['Male','Male'],['Female','Female']],:selected => @doctor.gender), {}, { :class => 'col-md-3 form-control', :required => :true } %>
										</div>
									</div>

									<div class="form-group">
										<label class="control-label col-md-3">Postcode
										<span class="required">
											 *
										</span>
										</label>
										<div class="col-md-9">
											<%= f.text_field(:postcode, :class => 'form-control', :pattern => '^((([A-PR-UWYZ][0-9])|([A-PR-UWYZ][0-9][0-9])|([A-PR-UWYZ][A-HK-Y][0-9])|([A-PR-UWYZ][A-HK-Y][0-9][0-9])|([A-PR-UWYZ][0-9][A-HJKSTUW])|([A-PR-UWYZ][A-HK-Y][0-9][ABEHMNPRVWXY]))\s?([0-9][ABD-HJLNP-UW-Z]{2})|(GIR)\s?(0AA))$', :required => :true) %><em> e.g PL4 8NU</em>
										</div>
									</div>

									<div class="form-group">
										<label class="control-label col-md-3">Profile
										<span class="required">
											 *
										</span>
										</label>
										<div class="col-md-9">
											<%= f.text_area :profile, :placeholder => 'This can be left to be filled by personnel after sign on', :class => 'wysihtml5 form-control', :rows => '4' %>
										</div>
									</div>

								</div>

								<div class="form-actions fluid">
									<div class="col-md-offset-3 col-md-9">
										<%= submit_tag("Save", :class => 'btn green')%>
										<%= link_to("Cancel", {:action => 'index'}, :class => 'btn default') %>
									</div>
								</div>
							
							<% end %>
						</div>
					</div>
					<!-- END SAMPLE FORM PORTLET-->

					<!-- END EXAMPLE TABLE PORTLET-->

							

		</div>
	</div>
	<!-- END CONTENT -->
</div>
<!-- END CONTAINER -->

