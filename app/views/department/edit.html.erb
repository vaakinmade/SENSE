<% @page_title = "Department" %>

			<!-- END STYLE CUSTOMIZER -->
					<!-- BEGIN SAMPLE FORM PORTLET-->
					<div class="portlet box green ">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-reorder"></i> Edit Department
							</div>
							<div class="tools">
								<a href="" class="collapse">
								</a>
								<a href="" class="reload">
								</a>
							</div>
						</div>
						<div class="portlet-body form">
							<%= form_for(:department, :url => {:action => 'update', :id => @department.id}, :html => {:id => "form_sample_1", :class => 'form-horizontal', :role => 'form'}) do |f| %>
							
								<div class="form-body">
									<div class="form-group">
										<label class="col-md-3 control-label">Name</label>
										<div class="col-md-9">
											<%= f.text_field(:name, :class => 'form-control', :placeholder => 'Enter department name', :required => :true) %>
											<span class="help-block">
												
											</span>
										</div>
									</div>
																	
									<div class="form-group">
										<label class="col-md-3 control-label">Description</label>
											<div class="col-md-9">
												<%= f.text_area(:description, :class => 'form-control', :rows => '4', :required => :true) %>
											</div>
									</div>
								<div class="form-actions fluid">
									<div class="col-md-offset-3 col-md-9">
										<%= submit_tag("Save", :class => 'btn green')%>
										<%= link_to("Cancel", {:action => 'index'}, :class => 'btn default') %>
									</div>
								</div>
							
							<% end %>
						</div>
					</div>
					<!-- END SAMPLE FORM PORTLET-->

					<!-- END EXAMPLE TABLE PORTLET-->

							

		</div>
	</div>
	<!-- END CONTENT -->
</div>
